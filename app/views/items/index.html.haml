%h1= "#{@item_category.name.pluralize} Listing"

%table
  %thead
    %tr
      %th ID
      - @item_category.item_fields.each do |item_field|
        %th= item_field.label
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        - # item.item_field_values.first.item_field.label
        - item.item_field_values.each do |item_field_value|
          %td= item_field_value.value
        %td= link_to "View", item
        %td= link_to "Edit", edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%hr
= link_to "New", new_item_category_item_path